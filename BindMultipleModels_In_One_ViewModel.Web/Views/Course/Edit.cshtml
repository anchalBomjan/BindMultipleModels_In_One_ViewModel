@model BindMultipleModels_In_One_ViewModel.Web.Models.Course



<h1>Edit Course</h1>

@if (Model == null)
{
    <p>No course was found with this ID</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Course ID</label>
            <input type="text" class="form-control" asp-for="CourseID" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Course Name</label>
            <input type="text" class="form-control" asp-for="CourseName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Course Description</label>
            <textarea class="form-control" asp-for="CourseDescription"></textarea>
        </div>
        <div class="mt-3">
            <label class="form-label">Credits</label>
            <input type="text" class="form-control" asp-for="Credits" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Course">Delete</button>
        </div>
    </form>
}
