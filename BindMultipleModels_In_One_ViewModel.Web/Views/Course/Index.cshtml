@model IEnumerable<BindMultipleModels_In_One_ViewModel.Web.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Description</th>
            <th>Credits</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseID</td>
                <td>@course.CourseName</td>
                <td>@course.CourseDescription</td>
                <td>@course.Credits</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-primary">Edit</a>
                   

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Course</a>
